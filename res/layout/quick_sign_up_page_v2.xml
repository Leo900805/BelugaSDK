<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/blue_gradient_bg"
    tools:context=".Fastregistration">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:background="@drawable/beluga_background_v5" >
        
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="342dp"
            android:id="@+id/contextSideLinearLayout"
            android:weightSum="1"
            android:layout_gravity="center"
            android:textAlignment="gravity"
            android:layout_marginTop="100dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:layout_weight="0.57"
                android:textAlignment="gravity"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal">



                <EditText
                    android:layout_width="300dp"
                    android:layout_height="51dp"
                    android:id="@+id/qsacceditText"
                    android:enabled="false"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:background="@drawable/acc_edittext_in_qs"
                    android:drawableLeft="@drawable/guser" />


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <EditText
                        android:layout_width="220dp"
                        android:layout_height="51dp"
                        android:ems="10"
                        android:id="@+id/qspwdeditText"
                        android:password="false"
                        android:inputType="text"
                        android:singleLine="true"
                        android:maxLength="20"
                        android:drawableLeft="@drawable/gpassword"
                        android:enabled="false"
                        android:background="@drawable/edit_text_bg"/>

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="80dp"
                        android:layout_height="51dp"
                        android:id="@+id/qsmodbtn"
                        android:layout_gravity="right"
                        android:layout_marginTop="5dp"
                        android:text="@string/Modify_Button_Text"
                        android:background="@drawable/mp_btn_bg"
                        android:textSize="12dp"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/qscheckBox"
                    android:checked="true"
                    android:layout_marginTop="10dp"
                    android:textColor="#040404"
                    android:textAlignment="gravity"
                    android:layout_gravity="center_horizontal" />


            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
    
    		<ImageButton
    		    android:id="@+id/qsreturnbtn"
    		    android:layout_width="66dp"
    		    android:layout_height="66dp"
    		    android:layout_alignParentBottom="true"
    		    android:layout_alignParentLeft="true"
    		    android:layout_marginBottom="25dp"
    		    android:layout_marginLeft="50dp"
    		    android:background="@drawable/return_circle_btn"
    		    android:src="@drawable/return_pic"
    		    android:text="+"
    		    android:textAlignment="center" />

         		<ImageButton
         		    android:id="@+id/qscomfirmbtn"
         		    android:layout_width="66dp"
         		    android:layout_height="66dp"
         		    android:layout_alignParentBottom="true"
         		    android:layout_alignParentRight="true"
         		    android:layout_marginBottom="25dp"
         		    android:layout_marginRight="50dp"
         		    android:background="@drawable/circle"
         		    android:src="@drawable/ic_done"
         		    android:text="+"
         		    android:textAlignment="center" />

</RelativeLayout>
