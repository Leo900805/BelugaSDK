<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fastregistration"
    android:background="@drawable/bg"
    android:gravity="center_vertical|center_horizontal">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="560dp"
        android:background="@drawable/beluga_background"
        android:id="@+id/loginBgLinearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:textAlignment="gravity"
            android:gravity="bottom"
            android:id="@+id/tileSideLinearLayout"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/qspagetitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/QS_Page_Title_Text"
                android:textAlignment="gravity"
                android:textColor="#6ba2af"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="342dp"
            android:id="@+id/contextSideLinearLayout"
            android:weightSum="1"
            android:layout_gravity="center"
            android:textAlignment="gravity">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:layout_weight="0.57"
                android:textAlignment="gravity"
                android:layout_gravity="center"
                android:gravity="center_vertical|center_horizontal">



                <EditText
                    android:layout_width="300dp"
                    android:layout_height="51dp"
                    android:id="@+id/qsacceditText"
                    android:enabled="false"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:background="@drawable/acc_edittext_in_qs"
                    android:drawableLeft="@drawable/guser" />


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <EditText
                        android:layout_width="220dp"
                        android:layout_height="51dp"
                        android:ems="10"
                        android:id="@+id/qspwdeditText"
                        android:password="false"
                        android:inputType="text"
                        android:singleLine="true"
                        android:maxLength="20"
                        android:drawableLeft="@drawable/gpassword"
                        android:enabled="false"
                        android:background="@drawable/edit_text_bg"/>

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="80dp"
                        android:layout_height="51dp"
                        android:id="@+id/qsmodbtn"
                        android:layout_gravity="right"
                        android:layout_marginTop="5dp"
                        android:text="@string/Modify_Button_Text"
                        android:background="@drawable/mp_btn_bg"
                        android:textSize="12dp"
                        android:textColor="#FFFFFF" />

                </LinearLayout>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/qscheckBox"
                    android:checked="true"
                    android:layout_marginTop="10dp"
                    android:textColor="#040404"
                    android:textAlignment="gravity"
                    android:layout_gravity="center_horizontal" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/bottmSideLinearLayout"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <Button
                    android:layout_width="170dp"
                    android:layout_height="50dp"
                    android:id="@+id/qsreturnbtn"
                    android:background="@drawable/btn_return_eff"
                    android:text="@string/Return_Button_Text"
                    android:layout_marginBottom="9dp"
                    android:layout_marginLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />
                
                <Button
                    android:layout_width="170dp"
                    android:layout_height="50dp"
                    android:id="@+id/qscomfirmbtn"
                    android:background="@drawable/btn_confirm_click_eff"
                    android:text="@string/Confirm_Button_Text"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>