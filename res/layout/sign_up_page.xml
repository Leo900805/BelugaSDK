<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:gravity="center_vertical|center_horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="593dp"
        android:background="@drawable/beluga_background"
        android:id="@+id/loginBgLinearLayout">

        <LinearLayout
             android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:textAlignment="gravity"
            android:gravity="bottom"
            android:id="@+id/tileSideLinearLayout">

            <TextView
                android:id="@+id/signuppagetitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/Signup_Page_Title_Text"
                android:textAlignment="center"
                android:textColor="#6ba2af"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="400dp"
            android:id="@+id/contextSideLinearLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/signupacctextViewTextView"
                    android:layout_width="90dp"
                    android:layout_height="31dp"
                    android:text="@string/Enter_Ac_Type"
                    android:textAlignment="textStart"
                    android:textColor="#6ba2af"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/signupacctextView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text_default_bg2"
                    android:hint="@string/Enter_Ac_Type"
                    android:paddingLeft="10dp" />

                <TextView
                    android:id="@+id/signuppwdTextView"
                    android:layout_width="90dp"
                    android:layout_height="31dp"
                    android:text="@string/Enter_Pwd_Type"
                    android:textAlignment="textStart"
                    android:textColor="#6ba2af"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/signuppwdeditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text_default_bg2"
                    android:ems="10"
                    android:hint="@string/Enter_Pwd_Type"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:paddingLeft="10dp"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/signupnewpwdTextView"
                    android:layout_width="150dp"
                    android:layout_height="31dp"
                    android:text="@string/Enter_New_Pwd_Type"
                    android:textAlignment="textStart"
                    android:textColor="#6ba2af"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/signupnewpwdeditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text_default_bg2"
                    android:ems="10"
                    android:hint="@string/Comfirm_New_Pwd_Type"
                    android:inputType="textPassword"
                    android:maxHeight="20dp"
                    android:paddingLeft="10dp"
                    android:singleLine="true" />

                <CheckBox
                    android:id="@+id/signupcheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:checked="true"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottmSideLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/signupreturnbtn"
                    android:layout_width="170dp"
                    android:layout_height="50dp"
                    android:layout_marginBottom="9sp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_return_eff"
                    android:text="@string/Return_Button_Text"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/signupcomfirmbtn"
                    android:layout_width="170dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/btn_confirm_click_eff"
                    android:text="@string/Confirm_Button_Text"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>